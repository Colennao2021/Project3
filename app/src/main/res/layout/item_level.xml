<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_item_level"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/item_level">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gui40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/name_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_item_home"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/gui40"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_level"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hoc_ngay"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:background="@drawable/edit_hoc_ngay"
        android:text="@string/hoc_ngay"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>